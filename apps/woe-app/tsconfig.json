{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2021"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",                    // ðŸ‘ˆ important
    "paths": {
      "@/*": ["./*"],                  // ðŸ‘ˆ maps "@/..." to apps/woe-app/*
      "@excalidraw/excalidraw": ["../../packages/woe-excalidraw/packages/excalidraw"],
      "@excalidraw/excalidraw/*": ["../../packages/woe-excalidraw/packages/excalidraw/*"],
      "@excalidraw/math": ["../../packages/woe-excalidraw/packages/math/src"],
      "@excalidraw/math/*": ["../../packages/woe-excalidraw/packages/math/src/*"],
      "@excalidraw/common": ["../../packages/woe-excalidraw/packages/common/src"],
      "@excalidraw/common/*": ["../../packages/woe-excalidraw/packages/common/src/*"],
      "@excalidraw/element": ["../../packages/woe-excalidraw/packages/element/src"],
      "@excalidraw/element/*": ["../../packages/woe-excalidraw/packages/element/src/*"],
      "@excalidraw/utils": ["../../packages/woe-excalidraw/packages/utils/src"],
      "@excalidraw/utils/*": ["../../packages/woe-excalidraw/packages/utils/src/*"]
    },
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
